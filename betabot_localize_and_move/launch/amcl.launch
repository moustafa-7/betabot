
<launch>
    <arg name="map_file" default="$(find pgm_map_creator)/maps/map.yaml"/>
    
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
        <param name="odom_frame_id" value="odom"/>
    </node>

    <arg name="use_map_topic" default="false"/>
    <!-- <arg name="scan_topic" default="front/scan" /> -->
    <arg name="scan_topic" default="scan" />
    

    <node name="amcl" pkg="amcl" type="amcl" output="screen">
        <param name="odom_model_type" value="diff"/>
        <param name="base_frame_id" value="base_footprint"/>
        <param name="global_frame_id" value="map"/>
        <!-- If you choose to define initial pose here -->
        <param name="initial_pose_x" value="0.0"/>
        <param name="initial_pose_y" value="0.0"/>
        <param name="initial_pose_a" value="0.0" />
        <param name="min_particles" value="200"/>
        <param name="max_particles" value="500"/>
    </node>
    
    
    
    <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
        <!-- <remap from="scan" to="/betabot/laser/scan"/> -->
        <!-- <remap from="cmd_vel" to="cmd_vel"/> -->
        <!-- <remap from="odom" to="odometry/filtered" /> -->
        <param name="base_global_planner" value="navfn/NavfnROS" />
        <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
        <rosparam file="$(find betabot_localize_and_move)/config_folder/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find betabot_localize_and_move)/config_folder/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find betabot_localize_and_move)/config_folder/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find betabot_localize_and_move)/config_folder/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find betabot_localize_and_move)/config_folder/base_local_planner_params.yaml" command="load" />
    </node>

</launch>